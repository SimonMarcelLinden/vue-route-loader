{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"strict": true,
		"jsx": "preserve",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"moduleResolution": "Node",
		"baseUrl": ".",
		"outDir": "./dist",
		"resolveJsonModule": true,
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"allowJs": true,
		"types": [
			"node"
		]
	},
	"include": [
		"module-loader.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		"tests/**/*.ts",
		"tests/**/*.tsx",
		"src/**/*.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}